<section class="business">
  <div class="container">
    <div class="section-header">
      <div class="section-label">Для бизнеса</div>
      <h2>Для бизнеса и команд</h2>
    </div>
    <div class="business-card">
      <div class="business-column problems">
        <h3>Знакомо?</h3>
        <ul>
          <% business[:problems].each do |problem| %>
            <li>
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="18" y1="6" x2="6" y2="18"/><line x1="6" y1="6" x2="18" y2="18"/></svg>
              <%= problem %>
            </li>
          <% end %>
        </ul>
      </div>
      <div class="business-column solutions">
        <h3>Чем помогу</h3>
        <ul>
          <% business[:solutions].each do |solution| %>
            <li>
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg>
              <%= solution %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="business-cta">
      <a href="https://t.me/renatxars" class="cta-button" target="_blank" rel="noopener">
        Обсудить задачу
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M5 12h14M12 5l7 7-7 7"/>
        </svg>
      </a>
    </div>
  </div>
</section>
